<link href="~/css/custom/login/login.css" rel="stylesheet" />
<div class="login-container">
    <div class="login-box">
        <h1>Welcome Back</h1>
        <form>
            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="Enter your email" required>
            </div>
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" placeholder="Enter your password" required>
            </div>
            <div class="input-group">
                <label for="captcha">Captcha</label>
                <div class="captcha-group">
                    <input type="text" id="captcha" placeholder="Enter the code" required>
                    <img src="captcha-placeholder.png" alt="Captcha" class="captcha-image">
                    <button type="button" class="refresh-captcha">↻</button>
                </div>
            </div>
            <div class="action-group">
                <button type="submit" class="login-button">Login</button>
                <a href="#" class="forgot-password">Forgot Password?</a>
            </div>
        </form>
        <p class="register-prompt">Don't have an account? <a href="#">Sign up</a></p>
    </div>
</div>